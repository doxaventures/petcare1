- fields = [:name, :phone, :street1, :street2, :postal_code, :city, :state_or_province, :country]

- if billing_address && billing_address.slice(*fields).values.any?
  .shipping-address-container
    %h2= t("billing_address.billing_address")
    - fields.map do |field|
      - if billing_address[field].present?
        - if billing_address[field] == :name
          .shipping-address-name= billing_address[field]
        - else
          .shipping-address-row= billing_address[field]
