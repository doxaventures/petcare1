= render :partial => "layouts/left_hand_navigation", :locals => { :links => about_links }

-# content_for :title, t('layouts.infos.about')

- content_for :title_header do
  %h1= t("layouts.infos.terms_and_conditions")

.left-navi-section.about-section
  = render :layout => "layouts/mercury_editable_page", :locals => { :content_type => "terms_and_condtions" } do
    - if @community_customization && @community_customization.terms_and_condtions
      - content = @community_customization.terms_and_condtions.html_safe
    - else
      - content = render :partial => "infos/terms_and_conditions"

    - content_for :meta_description, StringUtils.first_words(strip_tags(content.html_safe))
    - content_for :keywords, StringUtils.keywords(strip_tags(content.html_safe))
    - content